# Polymarket Trading Configuration
# Copy this file to .env and fill in your actual credentials

# Your proxy wallet's private key (without 0x prefix)
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Your main wallet's public address (with 0x prefix)
POLYMARKET_FUNDER=0xYourFunderAddressHere

# Optional: Chain ID (default is 137 for Polygon mainnet)
# CHAIN_ID=137

# Optional: Enable verbose logging
# VERBOSE=true

# Optional: Enable dry run mode (for testing without real trades)
# DRY_RUN=true

# Opinion Trading Configuration
OPINION_API_KEY=your_api_key_here
OPINION_PRIVATE_KEY=0x1234567890abcdef...
OPINION_MULTI_SIG_ADDR=0xYourWalletAddress...